<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".GenreActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/TitleSerie"
        android:id="@+id/textSeries"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageSeries"
        android:layout_below="@+id/textSeries"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Realisateur"
        android:id="@+id/realisateur"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="400px"
        android:layout_height="50px"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/NomRealisateur"
        android:id="@+id/textRealisateur"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textSeries"
        android:layout_alignStart="@+id/textSeries" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Genre"
        android:id="@+id/genre"
        android:layout_below="@+id/realisateur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="400px"
        android:layout_height="50px"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/NomGenre"
        android:id="@+id/textGenre"
        android:layout_alignBottom="@+id/genre"
        android:layout_alignLeft="@+id/textRealisateur"
        android:layout_alignStart="@+id/textRealisateur" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Synopsis"
        android:id="@+id/Synopsis"
        android:layout_below="@+id/genre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="700px"
        android:layout_height="500px"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/TextSynopsis"
        android:id="@+id/textSynopsis"
        android:layout_below="@+id/Synopsis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
